<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_tv_100"
        android:text="Hello World!"
        android:gravity="center"
        android:textSize="@dimen/font_large_24" />

    <ImageView
        android:id="@+id/iv_bender"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@drawable/bender_dance"
        android:contentDescription="@string/bender_photo"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/color_primary"
        android:layout_marginTop="@dimen/font_normal_16"
         >

        <EditText
            android:id="@+id/et_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:maxLines="1"
            android:textColor="@color/color_grey"
            android:textColorHint="@color/color_grey"
            android:hint="@string/enter_text"
            android:paddingTop="@dimen/spacing_normal_16"
            android:paddingBottom="@dimen/spacing_normal_16"
            android:layout_marginStart="@dimen/spacing_small_8"
            android:layout_marginEnd="@dimen/spacing_small_8"
            />

        <ImageView
            android:id="@+id/iv_send"
            android:layout_width="@dimen/size_large_24"
            android:layout_height="@dimen/size_large_24"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_send_white_24dp"
            android:contentDescription="@string/send"
            android:layout_marginEnd="@dimen/spacing_normal_16"/>
    </LinearLayout>

</LinearLayout>